<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.blitzfud">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">

        <activity android:name=".views.pages.shoppingCart.execute.ExecuteShoppingCartActivity"/>
        <activity android:name=".views.pages.shoppingCart.execute.ExecuteMarketActivity" />
        <activity android:name=".views.pages.shoppingCart.ShoppingCartActivity" />
        <activity android:name=".views.pages.shoppingCart.ItemShoppingCartActivity" />
        <activity android:name=".views.pages.order.OrderSuccessfullActivity" />
        <activity android:name=".views.pages.order.DetailPendingOrderActivity" />
        <activity android:name=".views.pages.market.MarketActivity" />
        <activity android:name=".views.blitzfud.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".views.blitzfud.GuideActivity" />
        <activity android:name=".views.authentication.SignUpActivity" />
        <activity android:name=".views.authentication.SignInActivity" />
        <activity android:name=".views.pages.map.MapActivity" />
        <activity android:name=".views.pages.MainActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />
    </application>

</manifest>